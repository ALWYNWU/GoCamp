<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GoCamp</title>

    <script src='https://api.mapbox.com/mapbox-gl-js/v2.10.0/mapbox-gl.js' crossorigin></script>
    <link href='https://api.mapbox.com/mapbox-gl-js/v2.10.0/mapbox-gl.css' rel='stylesheet' crossorigin/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" 
            rel="stylesheet" 
            integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" 
            crossorigin="anonymous">
    
    
    <!-- <link rel="stylesheet" href="/stylesheets/app.css"> -->

    <style>
        #index-images{
            width: 90%;
            /* height: 240px; */
        }
        #map { width: 100%; height: 690px; }

    </style>

</head>
<body class="d-flex flex-column vh-100">
    
    <%- include('../partials/navbar') %>
    <%- include('../partials/flash') %>
   
    
    <main>
        
        <div id="map" class="mb-3"></div>
        
        <div class="container">

            <div class="row mb-3" style="text-align: center">
                <div class="col-md-3">
                    <h3 style="text-align: center"><b>All Campgrounds</b></h3>
                </div>
                <div class="col-md-2">
                    <a href="/campgrounds/new" class="btn btn-warning"><b>Add Campground</b></a>
                </div>
            </div>

    
            <!-- < for (let campground of campgrounds) { > -->
            <% for (let i = campgrounds.length-1; i >=0; i--) { %>
                <div class="card mb-3" style="height: 80%;">
                    <div class="row">
                        <div class="col-md-4">
    
                            <% if(campgrounds[i].images.length) { %>
                            <img crossorigin="anonymous" id="index-images" class="img-fluid" alt="" src="<%=campgrounds[i].images[0].url%>">
                            <% }else { %>
                            <img crossorigin="anonymous" id="index-images" class="img-fluid" alt="" src="https://images.unsplash.com/photo-1510312305653-8ed496efae75?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1374&q=80">
                            <% } %>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title"><b><%= campgrounds[i].title%></b></h5>
                                <p class="card-text"><%= campgrounds[i].description%></p>
                                <p class="card-text">
                                    <small class="text-muted"><%= campgrounds[i].location%></small>    
                                </p>
                                <a class="btn btn-md btn-primary" href="/campgrounds/<%=campgrounds[i]._id%>"><b>View <%= campgrounds[i].title%> details</b></a>
    
                            </div>
    
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
        
    </main>
    <%- include('../partials/footer')%>

    <script>
        const campgrounds = {features: <%- JSON.stringify(campgrounds) %>}
    </script>

    <script src="/js/clusterMap.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" 
        integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" 
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js" 
        integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" 
        crossorigin="anonymous"></script>
    
    <script src="/js/validateForm.js"></script>
    

</body>
</html>






    
    
    
    

    
